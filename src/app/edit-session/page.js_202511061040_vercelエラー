"use client";

import { useEffect, useState } from "react";
import { useSearchParams } from "next/navigation";

/**
 * /history/edit?id=3
 * id = pocopoco_history ã®é…åˆ—index
 *
 * è¦ªãƒ­ãƒƒã‚¯:
 *   - localStorage.pocopoco_parentCode ãŒã‚ã‚Œã°ãã‚Œã‚’ä½¿ã†
 *   - ãªã‘ã‚Œã° "1234" ã‚’ä»®ã®ãƒ‡ãƒ•ã‚©ãƒ«ãƒˆã¨ã—ã¦ä½¿ã†
 *
 * å¯¾å¿œï¼š
 *   - æ–°ãƒ•ã‚©ãƒ¼ãƒãƒƒãƒˆ { task_id, task_title } / æ—§ { task } ã©ã¡ã‚‰ã§ã‚‚èª­ã‚ã‚‹
 *   - ã‚¿ã‚¹ã‚¯ã¯è¨­å®šç”»é¢ã§ç™»éŒ²ã—ãŸã‚‚ã®ã‹ã‚‰é¸æŠ
 */

export default function EditSessionPage() {
  const searchParams = useSearchParams();
  const idStr = searchParams.get("id");
  const index = idStr ? parseInt(idStr, 10) : null;

  // ç·¨é›†å¯¾è±¡ãƒ•ã‚£ãƒ¼ãƒ«ãƒ‰
  const [taskId, setTaskId] = useState("");
  const [taskTitle, setTaskTitle] = useState("");
  const [minutes, setMinutes] = useState("");
  const [count, setCount] = useState("");
  const [memo, setMemo] = useState("");
  const [startedAt, setStartedAt] = useState("");

  // ã‚¿ã‚¹ã‚¯ä¸€è¦§ï¼ˆè¨­å®šã‹ã‚‰ãƒ­ãƒ¼ãƒ‰ï¼‰
  const [taskList, setTaskList] = useState([]);

  // è¦ªã‚³ãƒ¼ãƒ‰
  const [adminCodeInput, setAdminCodeInput] = useState("");
  const [requiredCode, setRequiredCode] = useState("1234");

  const [loaded, setLoaded] = useState(false);

  useEffect(() => {
    // è¦ªã‚³ãƒ¼ãƒ‰ãƒ­ãƒ¼ãƒ‰
    try {
      const stored = localStorage.getItem("pocopoco_parentCode");
      if (stored && /^[0-9]{4}$/.test(stored)) {
        setRequiredCode(stored);
      }
    } catch {}

    // ã‚¿ã‚¹ã‚¯ä¸€è¦§ãƒ­ãƒ¼ãƒ‰
    try {
      const raw = localStorage.getItem("pocopoco_tasks");
      if (raw) {
        const list = JSON.parse(raw);
        if (Array.isArray(list)) setTaskList(list);
      }
    } catch (e) {
      console.warn("ã‚¿ã‚¹ã‚¯ãƒªã‚¹ãƒˆèª­ã¿è¾¼ã¿å¤±æ•—", e);
    }

    // å¯¾è±¡ãƒ‡ãƒ¼ã‚¿ãƒ­ãƒ¼ãƒ‰
    try {
      const rawHist = localStorage.getItem("pocopoco_history");
      if (!rawHist) {
        setLoaded(true);
        return;
      }
      const arr = JSON.parse(rawHist);
      const rec = arr[index];
      if (!rec) {
        setLoaded(true);
        return;
      }

      // æ–°æ—§å½¢å¼å¯¾å¿œ
      if (rec.task_id) setTaskId(rec.task_id);
      if (rec.task_title) setTaskTitle(rec.task_title);
      if (rec.task) {
        // æ—§ãƒ‡ãƒ¼ã‚¿
        setTaskTitle(rec.task);
      }

      setMinutes(String(Math.floor((rec.seconds || 0) / 60)));
      setCount(String(rec.count ?? 0));
      setMemo(rec.memo || "");
      setStartedAt(rec.startedAt || "");
    } catch (e) {
      console.error("edit load error", e);
    } finally {
      setLoaded(true);
    }
  }, [index]);

  // ä¿å­˜å‡¦ç†
  function handleSave() {
    if (adminCodeInput !== requiredCode) {
      alert("ã²ã¿ã¤ã‚³ãƒ¼ãƒ‰ãŒã¡ãŒã„ã¾ã™ã€‚");
      return;
    }

    try {
      const raw = localStorage.getItem("pocopoco_history");
      if (!raw) return alert("å…ƒãƒ‡ãƒ¼ã‚¿ãŒè¦‹ã¤ã‹ã‚Šã¾ã›ã‚“ã€‚");
      const arr = JSON.parse(raw);
      if (!arr[index]) return alert("è¨˜éŒ²ãŒè¦‹ã¤ã‹ã‚Šã¾ã›ã‚“ã€‚");

      const secs = parseInt(minutes || "0", 10) * 60;
      const countNum = parseInt(count || "0", 10);

      // ä¿å­˜ãƒ‡ãƒ¼ã‚¿ã‚’æ›´æ–°
      arr[index] = {
        ...arr[index],
        task_id: taskId || arr[index].task_id || "",
        task_title:
          taskTitle ||
          (taskList.find((t) => t.id === taskId)?.label ?? arr[index].task_title) ||
          "",
        seconds: secs,
        count: countNum,
        memo,
        startedAt: startedAt || arr[index].startedAt,
      };

      localStorage.setItem("pocopoco_history", JSON.stringify(arr));
      alert("æ›´æ–°ã—ã¾ã—ãŸã€‚");
      window.location.href = "/history";
    } catch (e) {
      console.error("save error", e);
      alert("ä¿å­˜ã«å¤±æ•—ã—ã¾ã—ãŸã€‚");
    }
  }

  // å‰Šé™¤å‡¦ç†
  function handleDelete() {
    if (adminCodeInput !== requiredCode) {
      alert("ã²ã¿ã¤ã‚³ãƒ¼ãƒ‰ãŒã¡ãŒã„ã¾ã™ã€‚");
      return;
    }
    try {
      const raw = localStorage.getItem("pocopoco_history");
      if (!raw) return;
      const arr = JSON.parse(raw);
      if (!arr[index]) return alert("ã“ã®è¨˜éŒ²ã¯è¦‹ã¤ã‹ã‚Šã¾ã›ã‚“ã€‚");

      arr.splice(index, 1);
      localStorage.setItem("pocopoco_history", JSON.stringify(arr));
      alert("ã“ã®è¨˜éŒ²ã‚’å‰Šé™¤ã—ã¾ã—ãŸã€‚");
      window.location.href = "/history";
    } catch (e) {
      console.error("delete error", e);
      alert("å‰Šé™¤ã«å¤±æ•—ã—ã¾ã—ãŸã€‚");
    }
  }

  // ã‚¿ã‚¹ã‚¯é¸æŠè‚¢è¡¨ç¤ºå
  function getTaskLabelById(id) {
    return taskList.find((t) => t.id === id)?.label || id || "(æœªè¨­å®š)";
  }

  return (
    <main
      style={{
        fontFamily: "system-ui, sans-serif",
        padding: "24px 16px 80px",
        maxWidth: "480px",
        margin: "0 auto",
      }}
    >
      <h1
        style={{
          fontSize: "20px",
          fontWeight: "600",
          marginBottom: "4px",
        }}
      >
        è¨˜éŒ²ã®ç·¨é›†
      </h1>

      {!loaded ? (
        <p>èª­ã¿è¾¼ã¿ä¸­â€¦</p>
      ) : index === null || isNaN(index) ? (
        <p style={{ color: "#c00" }}>
          è¨˜éŒ²ãŒã¿ã¤ã‹ã‚Šã¾ã›ã‚“ï¼ˆURLã« ?id=æ•°å­— ãŒå¿…è¦ã§ã™ï¼‰
        </p>
      ) : (
        <>
          {/* ã‚¿ã‚¹ã‚¯é¸æŠ */}
          <section style={sectionStyle}>
            <label style={labelStyle}>ã‚¿ã‚¹ã‚¯å</label>
            <select
              value={taskId}
              onChange={(e) => {
                setTaskId(e.target.value);
                const t = taskList.find((tt) => tt.id === e.target.value);
                setTaskTitle(t?.label || "");
              }}
              style={inputStyle}
            >
              <option value="">ï¼ˆãˆã‚‰ã‚“ã§ãã ã•ã„ï¼‰</option>
              {taskList.map((t) => (
                <option key={t.id} value={t.id}>
                  {t.icon || "ğŸµ"} {t.label}
                </option>
              ))}
            </select>
          </section>

          {/* æ™‚é–“ï¼ˆåˆ†ï¼‰ */}
          <section style={sectionStyle}>
            <label style={labelStyle}>æ™‚é–“ï¼ˆåˆ†ï¼‰</label>
            <input
              type="number"
              value={minutes}
              min={0}
              onChange={(e) => setMinutes(e.target.value)}
              style={inputStyle}
            />
          </section>

          {/* å›æ•° */}
          <section style={sectionStyle}>
            <label style={labelStyle}>å›æ•°</label>
            <input
              type="number"
              value={count}
              min={0}
              onChange={(e) => setCount(e.target.value)}
              style={inputStyle}
            />
          </section>

          {/* ãƒ¡ãƒ¢ */}
          <section style={sectionStyle}>
            <label style={labelStyle}>ãƒ¡ãƒ¢</label>
            <textarea
              rows={3}
              value={memo}
              onChange={(e) => setMemo(e.target.value)}
              style={{
                ...inputStyle,
                resize: "vertical",
                lineHeight: 1.4,
              }}
            />
          </section>

          {/* è¦ªã‚³ãƒ¼ãƒ‰ */}
          <section style={sectionStyle}>
            <label style={{ ...labelStyle, color: "#c00" }}>
              ãŠã¨ãªã®ã²ã¿ã¤ã‚³ãƒ¼ãƒ‰ï¼ˆ4ã‘ãŸï¼‰
            </label>
            <input
              type="password"
              value={adminCodeInput}
              onChange={(e) => setAdminCodeInput(e.target.value)}
              placeholder="****"
              style={{
                ...inputStyle,
                fontSize: "16px",
                letterSpacing: "0.3em",
              }}
            />
          </section>

          {/* ãƒœã‚¿ãƒ³ */}
          <div
            style={{
              display: "grid",
              gridTemplateColumns: "1fr 1fr",
              gap: "12px",
              marginBottom: "24px",
            }}
          >
            <button onClick={handleSave} style={saveBtnStyle}>
              ğŸ’¾ ã»ãã‚“
            </button>
            <button onClick={handleDelete} style={delBtnStyle}>
              ğŸ—‘ ã‘ã™
            </button>
          </div>

          <div style={{ textAlign: "center" }}>
            <button
              onClick={() => (window.location.href = "/history")}
              style={{
                background: "none",
                border: "none",
                color: "#666",
                textDecoration: "underline",
                fontSize: "14px",
              }}
            >
              â† å±¥æ­´ã«ã‚‚ã©ã‚‹
            </button>
          </div>
        </>
      )}
    </main>
  );
}

// ---------------- style ----------------

const sectionStyle = {
  border: "1px solid #ddd",
  borderRadius: "10px",
  padding: "12px",
  marginBottom: "12px",
  backgroundColor: "#fff",
  boxShadow: "0 1px 2px rgba(0,0,0,0.03)",
};

const labelStyle = {
  display: "block",
  fontSize: "14px",
  fontWeight: "600",
  marginBottom: "4px",
};

const inputStyle = {
  width: "100%",
  border: "1px solid #bbb",
  borderRadius: "8px",
  fontSize: "14px",
  padding: "8px 10px",
  backgroundColor: "#fff",
};

const saveBtnStyle = {
  background: "linear-gradient(90deg, rgb(204,0,255), rgb(255,102,153))",
  color: "#fff",
  border: "none",
  borderRadius: "10px",
  fontSize: "15px",
  fontWeight: "600",
  padding: "12px",
  boxShadow: "0 4px 8px rgba(0,0,0,0.15)",
};

const delBtnStyle = {
  backgroundColor: "#aaa",
  color: "#fff",
  border: "none",
  borderRadius: "10px",
  fontSize: "15px",
  fontWeight: "600",
  padding: "12px",
};
