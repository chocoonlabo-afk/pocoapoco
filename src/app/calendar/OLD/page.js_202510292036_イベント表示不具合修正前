"use client";

import { useEffect, useState } from "react";

/**
 * ãƒ¦ãƒ¼ãƒ†ã‚£ãƒªãƒ†ã‚£:
 * Date -> "YYYY-MM-DD" (æ—¥å˜ä½ã®ã‚­ãƒ¼ç”¨)
 */
function dateKeyFromDate(d) {
  const y = d.getFullYear();
  const m = String(d.getMonth() + 1).padStart(2, "0");
  const day = String(d.getDate()).padStart(2, "0");
  return `${y}-${m}-${day}`;
}

/**
 * ä»Šè¡¨ç¤ºã—ã¦ã„ã‚‹æœˆã®ã‚«ãƒ¬ãƒ³ãƒ€ãƒ¼ã‚’é€±ã”ã¨ã«ä¸¦ã¹ã‚‹
 * è¿”ã‚Šå€¤: weeks[weekIndex][dayIndex] = Date ã¾ãŸã¯ null
 */
function buildCalendarWeeks(targetDate) {
  // å¯¾è±¡ã®æœˆã®1æ—¥
  const year = targetDate.getFullYear();
  const month = targetDate.getMonth(); // 0-11
  const firstDay = new Date(year, month, 1);
  const firstWeekday = firstDay.getDay(); // 0=Sun..6=Sat

  // å¯¾è±¡ã®æœˆã®æœ«æ—¥
  const lastDay = new Date(year, month + 1, 0);
  const lastDateNum = lastDay.getDate();

  // ã‚°ãƒªãƒƒãƒ‰ç”¨ã®ã‚»ãƒ«åˆ—ã‚’ä½œã‚‹
  const cells = [];

  // 1æ—¥ãŒæœˆæ›œé–‹å§‹ã¨ã‹ã‚ºãƒ¬ã‚‹ã¶ã‚“ã‚’nullã§åŸ‹ã‚ã‚‹
  for (let i = 0; i < firstWeekday; i++) {
    cells.push(null);
  }

  // å®Ÿæ—¥ä»˜
  for (let d = 1; d <= lastDateNum; d++) {
    cells.push(new Date(year, month, d));
  }

  // 7æ—¥ãšã¤ã§é€±ã«åˆ†å‰²
  const weeks = [];
  for (let i = 0; i < cells.length; i += 7) {
    weeks.push(cells.slice(i, i + 7));
  }
  return weeks;
}

/**
 * ãã®æ—¥ã®åˆè¨ˆç·´ç¿’åˆ†ã‹ã‚‰ãƒãƒƒã‚¸ãƒ¬ãƒ™ãƒ«ã¨è‰²ã‚’æ±ºã‚ã‚‹
 * - <15åˆ†: "none"
 * - >=15 && <30: "bronze"
 * - >=30 && <60: "silver"
 * - >=60: "gold"
 */
function getBadgeInfo(minutes) {
  if (minutes >= 60) {
    return {
      level: "gold",
      bgColor: "#ffe0e0",
      borderColor: "#ff8080",
      textColor: "#a00000",
    };
  } else if (minutes >= 30) {
    return {
      level: "silver",
      bgColor: "#fff3cc",
      borderColor: "#ffd24d",
      textColor: "#6d4c00",
    };
  } else if (minutes >= 15) {
    return {
      level: "bronze",
      bgColor: "#eaffea",
      borderColor: "#9de09d",
      textColor: "#064e00",
    };
  } else if (minutes > 0) {
    // 0 < min <15 ã®ã¨ãã®è»½ã„è‰²
    return {
      level: "light",
      bgColor: "#eef4ff",
      borderColor: "#aac0ff",
      textColor: "#001a66",
    };
  } else {
    // ç·´ç¿’ãªã—
    return {
      level: "none",
      bgColor: "#fff",
      borderColor: "#ddd",
      textColor: "#999",
    };
  }
}

export default function CalendarPage() {
  const [currentMonthDate, setCurrentMonthDate] = useState(() => new Date());
  const [dailySummary, setDailySummary] = useState({}); // { "YYYY-MM-DD": { totalMin, sessions } }

  useEffect(() => {
    // localStorageã«ä¿å­˜ã•ã‚Œã¦ã„ã‚‹å±¥æ­´(pocopoco_history)ã‹ã‚‰ã€
    // æ—¥ã”ã¨ã®åˆè¨ˆæ™‚é–“ã¨ã‚»ãƒƒã‚·ãƒ§ãƒ³æ•°ã‚’è¨ˆç®—ã™ã‚‹
    try {
      const raw = window.localStorage.getItem("pocopoco_history");
      if (!raw) return;

      const all = JSON.parse(raw); // [{task, seconds, count, memo, startedAt}...]

      const summary = {};
      for (const s of all) {
        if (!s.startedAt) continue;
        const d = new Date(s.startedAt);
        const key = dateKeyFromDate(d);

        const sec = s.seconds || 0;
        if (!summary[key]) {
          summary[key] = {
            totalSec: 0,
            sessions: 0,
          };
        }
        summary[key].totalSec += sec;
        summary[key].sessions += 1;
      }

      // ç§’â†’åˆ†
      const finalSummary = {};
      for (const key in summary) {
        finalSummary[key] = {
          totalMin: Math.floor(summary[key].totalSec / 60),
          sessions: summary[key].sessions,
        };
      }

      setDailySummary(finalSummary);
    } catch (e) {
      console.error("ã‚«ãƒ¬ãƒ³ãƒ€ãƒ¼é›†è¨ˆã‚¨ãƒ©ãƒ¼", e);
    }
  }, []);

  const todayKey = dateKeyFromDate(new Date());
  const titleYear = currentMonthDate.getFullYear();
  const titleMonth = currentMonthDate.getMonth() + 1;
  const weeks = buildCalendarWeeks(currentMonthDate);

  function goPrevMonth() {
    setCurrentMonthDate((prev) => {
      return new Date(prev.getFullYear(), prev.getMonth() - 1, 1);
    });
  }

  function goNextMonth() {
    setCurrentMonthDate((prev) => {
      return new Date(prev.getFullYear(), prev.getMonth() + 1, 1);
    });
  }

  return (
    <main
      style={{
        padding: "24px 16px 80px",
        fontFamily: "system-ui, sans-serif",
        maxWidth: "480px",
        margin: "0 auto",
        lineHeight: 1.5,
      }}
    >
      {/* ãƒ˜ãƒƒãƒ€ãƒ¼ */}
      <header
        style={{
          display: "flex",
          alignItems: "center",
          justifyContent: "space-between",
          marginBottom: "16px",
        }}
      >
        <button
          onClick={goPrevMonth}
          style={{
            border: "1px solid #ccc",
            background: "#fff",
            borderRadius: "8px",
            padding: "6px 10px",
            fontSize: "14px",
            cursor: "pointer",
            minWidth: "44px",
          }}
        >
          â†
        </button>

        <div
          style={{
            textAlign: "center",
            lineHeight: 1.3,
          }}
        >
          <div
            style={{
              fontSize: "16px",
              fontWeight: "600",
            }}
          >
            {titleYear}å¹´ {titleMonth}æœˆ
          </div>
          <div
            style={{
              fontSize: "12px",
              color: "#666",
            }}
          >
            ãŒã‚“ã°ã£ãŸæ—¥ã«è‰²ãŒã¤ãã‚ˆ
          </div>
        </div>

        <button
          onClick={goNextMonth}
          style={{
            border: "1px solid #ccc",
            background: "#fff",
            borderRadius: "8px",
            padding: "6px 10px",
            fontSize: "14px",
            cursor: "pointer",
            minWidth: "44px",
          }}
        >
          â†’
        </button>
      </header>

      {/* æ›œæ—¥ãƒ˜ãƒƒãƒ€ãƒ¼ */}
      <div
        style={{
          display: "grid",
          gridTemplateColumns: "repeat(7, 1fr)",
          textAlign: "center",
          fontSize: "12px",
          fontWeight: "600",
          color: "#666",
          marginBottom: "8px",
        }}
      >
        <div>æ—¥</div>
        <div>æœˆ</div>
        <div>ç«</div>
        <div>æ°´</div>
        <div>æœ¨</div>
        <div>é‡‘</div>
        <div>åœŸ</div>
      </div>

      {/* ã‚«ãƒ¬ãƒ³ãƒ€ãƒ¼æœ¬ä½“ */}
      <div
        style={{
          display: "grid",
          gridTemplateRows: `repeat(${weeks.length}, 1fr)`,
          rowGap: "8px",
        }}
      >
        {weeks.map((week, wIdx) => (
          <div
            key={wIdx}
            style={{
              display: "grid",
              gridTemplateColumns: "repeat(7, 1fr)",
              columnGap: "8px",
            }}
          >
            {week.map((cellDate, cIdx) => {
              if (!cellDate) {
                // å‰æœˆã®ç©´åŸ‹ã‚ã‚»ãƒ«
                return (
                  <div
                    key={cIdx}
                    style={{
                      minHeight: "60px",
                      borderRadius: "8px",
                      background: "#f4f4f4",
                      border: "1px solid #ddd",
                    }}
                  />
                );
              }

              const key = dateKeyFromDate(cellDate);
              const info = dailySummary[key];
              const minutes = info ? info.totalMin : 0;
              const { bgColor, borderColor, textColor, level } =
                getBadgeInfo(minutes);

              // ä»Šæ—¥ãªã‚‰å¤–æ ã‚’ã¡ã‚‡ã£ã¨å¼·èª¿
              const isToday = key === todayKey;
              const outlineStyle = isToday
                ? "0 0 0 2px rgba(138,43,226,0.6)"
                : "none";

              return (
                <div
                  key={cIdx}
                  style={{
                    minHeight: "60px",
                    borderRadius: "8px",
                    border: `1px solid ${borderColor}`,
                    background: bgColor,
                    fontSize: "12px",
                    padding: "6px 6px",
                    lineHeight: 1.4,
                    display: "flex",
                    flexDirection: "column",
                    justifyContent: "space-between",
                    color: textColor,
                    boxShadow: outlineStyle,
                  }}
                >
                  {/* æ—¥ä»˜ */}
                  <div
                    style={{
                      fontWeight: "600",
                      textAlign: "left",
                      fontSize: "12px",
                    }}
                  >
                    {cellDate.getDate()}
                  </div>

                  {/* ãƒãƒƒã‚¸ or ãƒ‰ãƒƒãƒˆ */}
                  {minutes > 0 ? (
                    <div
                      style={{
                        textAlign: "right",
                        fontWeight: "600",
                        fontSize: "11px",
                        whiteSpace: "nowrap",
                        overflow: "hidden",
                        textOverflow: "ellipsis",
                      }}
                    >
                      {minutes}åˆ†
                      {level === "gold"
                        ? " ğŸ¥‡"
                        : level === "silver"
                        ? " ğŸ¥ˆ"
                        : level === "bronze"
                        ? " ğŸ¥‰"
                        : " â­"}
                    </div>
                  ) : (
                    <div
                      style={{
                        textAlign: "right",
                        fontSize: "11px",
                        color: "#bbb",
                      }}
                    >
                      ãƒ»
                    </div>
                  )}
                </div>
              );
            })}
          </div>
        ))}
      </div>

      {/* å‡¡ä¾‹ */}
      <div
        style={{
          fontSize: "11px",
          color: "#777",
          marginTop: "16px",
          lineHeight: 1.5,
          textAlign: "center",
        }}
      >
        ğŸ¥‰15åˆ†ã€œ / ğŸ¥ˆ30åˆ†ã€œ / ğŸ¥‡60åˆ†ã€œ
        <br />
        ä»Šæ—¥ã¯ã‚€ã‚‰ã•ãã®æ ã§è¡¨ç¤ºã•ã‚Œã¾ã™
      </div>
    </main>
  );
}
