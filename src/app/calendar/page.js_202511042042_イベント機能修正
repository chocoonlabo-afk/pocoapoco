"use client";

import { useEffect, useState } from "react";

// YYYY-MM-DD ã‚’ã¤ãã‚‹
function toDayKey(d) {
  const y = d.getFullYear();
  const m = String(d.getMonth() + 1).padStart(2, "0");
  const day = String(d.getDate()).padStart(2, "0");
  return `${y}-${m}-${day}`;
}

// 1ãƒ¶æœˆåˆ†ã®ã‚»ãƒ«ã‚’ä½œã‚‹
function buildCalendarCells(year, month) {
  const first = new Date(year, month, 1);
  const startWeekday = first.getDay();
  const lastDate = new Date(year, month + 1, 0).getDate();
  const cells = [];
  for (let i = 0; i < startWeekday; i++) cells.push(null);
  for (let d = 1; d <= lastDate; d++) {
    cells.push(new Date(year, month, d));
  }
  return cells;
}

// åˆ†æ•°ã«å¿œã˜ã¦è‰²ã‚’æ±ºã‚ã‚‹
function getBadge(minutes) {
  if (minutes >= 60)
    return {
      bg: "#ffe7e7",
      border: "#ff9f9f",
      text: "#a00000",
      label: "ğŸ¥‡",
    };
  if (minutes >= 30)
    return {
      bg: "#fff4d9",
      border: "#ffcd73",
      text: "#6d4c00",
      label: "ğŸ¥ˆ",
    };
  if (minutes >= 15)
    return {
      bg: "#e9ffe9",
      border: "#a8e4a8",
      text: "#045704",
      label: "ğŸ¥‰",
    };
  if (minutes > 0)
    return {
      bg: "#eef4ff",
      border: "#aac0ff",
      text: "#001a66",
      label: "â­",
    };
  return {
    bg: "#fff",
    border: "#ddd",
    text: "#999",
    label: "",
  };
}

// è¤‡æ•°ã‚¤ãƒ™ãƒ³ãƒˆèª­ã¿è¾¼ã¿ï¼ˆãªã‘ã‚Œã°1ä»¶ã ã‘ã®ã‚’å¾Œæ–¹äº’æ›ï¼‰
function loadEvents() {
  // æ–°
  try {
    const raw = localStorage.getItem("pocopoco_events");
    if (raw) {
      const arr = JSON.parse(raw);
      if (Array.isArray(arr)) {
        return arr.filter((ev) => ev.date);
      }
    }
  } catch {}
  // æ—§
  try {
    const raw1 = localStorage.getItem("pocopoco_event");
    if (raw1) {
      const ev = JSON.parse(raw1);
      if (ev?.date) {
        return [
          {
            id: "legacy",
            title: ev.title || "ã‚¤ãƒ™ãƒ³ãƒˆ",
            date: ev.date,
            mark: ev.mark || "EV",
          },
        ];
      }
    }
  } catch {}
  return [];
}

// ã‚«ãƒ¬ãƒ³ãƒ€ãƒ¼ã«åæ˜ ã™ã‚‹ã‚¿ã‚¹ã‚¯IDã®é…åˆ—ã‚’èª­ã¿è¾¼ã‚€ï¼ˆãªã‘ã‚Œã°nullï¼‰
function loadCalendarTaskFilter() {
  try {
    const raw = localStorage.getItem("pocopoco_calendar_task_filter");
    if (!raw) return null;
    const arr = JSON.parse(raw);
    return Array.isArray(arr) ? arr : null;
  } catch {
    return null;
  }
}

// ã‚¿ã‚¹ã‚¯ä¸€è¦§ã‚’èª­ã‚€ï¼ˆåå‰â†’idã®ãƒãƒƒãƒ”ãƒ³ã‚°ã«ä½¿ã†ï¼‰
function loadTasksDict() {
  try {
    const raw = localStorage.getItem("pocopoco_tasks");
    if (!raw) return { byId: {}, byLabel: {} };
    const arr = JSON.parse(raw);
    if (!Array.isArray(arr)) return { byId: {}, byLabel: {} };
    const byId = {};
    const byLabel = {};
    arr.forEach((t) => {
      if (t.id) {
        byId[t.id] = t;
      }
      if (t.label) {
        // labelã¯å°æ–‡å­—åŒ–ã—ã¦æŒã£ã¦ãŠãï¼ˆé›‘ã«æ¯”è¼ƒã™ã‚‹ç”¨ï¼‰
        byLabel[t.label.trim().toLowerCase()] = t;
      }
    });
    return { byId, byLabel };
  } catch {
    return { byId: {}, byLabel: {} };
  }
}

// èª•ç”Ÿæ—¥
function loadBirthday() {
  return localStorage.getItem("pocopoco_birthday") || "";
}
function isBirthdayDay(date, birthdayStr) {
  if (!birthdayStr) return false;
  const [, m, d] = birthdayStr.split("-");
  if (!m || !d) return false;
  return date.getMonth() + 1 === Number(m) && date.getDate() === Number(d);
}

// å±¥æ­´â†’æ—¥ã”ã¨ã®åˆè¨ˆã‚’ä½œã‚‹ï¼ˆã‚¿ã‚¹ã‚¯ãƒ•ã‚£ãƒ«ã‚¿ï¼‹å­ã©ã‚‚ãƒ•ã‚£ãƒ«ã‚¿ä»˜ãï¼‰
function buildDailyMinutesFromHistory(
  historyArr,
  filterIds,
  tasksById,
  tasksByLabel,
  targetChildId
) {
  const map = {};
  const hasFilter = Array.isArray(filterIds) && filterIds.length > 0;
  const hasChildFilter = targetChildId && targetChildId !== "all";

  for (const rec of historyArr) {
    if (!rec.startedAt) continue;

    // å­ã©ã‚‚ã§çµã‚‹
    if (hasChildFilter) {
      if ((rec.child_id || "") !== targetChildId) {
        continue;
      }
    }

    const dayKey = toDayKey(new Date(rec.startedAt));
    const sec = rec.seconds || 0;

    // ã‚¿ã‚¹ã‚¯ãƒ•ã‚£ãƒ«ã‚¿ãªã—ãªã‚‰å…¨éƒ¨è¶³ã™
    if (!hasFilter) {
      map[dayKey] = (map[dayKey] || 0) + Math.floor(sec / 60);
      continue;
    }

    // ã‚¿ã‚¹ã‚¯ãƒ•ã‚£ãƒ«ã‚¿ã‚ã‚Šï¼štask_idãŒãƒ•ã‚£ãƒ«ã‚¿ã«å«ã¾ã‚Œã‚‹
    if (rec.task_id && filterIds.includes(rec.task_id)) {
      map[dayKey] = (map[dayKey] || 0) + Math.floor(sec / 60);
      continue;
    }

    // task_title ã‹ã‚‰idã‚’æ¨æ¸¬ã™ã‚‹
    if (rec.task_title) {
      const lc = rec.task_title.trim().toLowerCase();
      const t = tasksByLabel[lc];
      if (t && filterIds.includes(t.id)) {
        map[dayKey] = (map[dayKey] || 0) + Math.floor(sec / 60);
        continue;
      }
    }

    // å¤ã„å½¢å¼ã® task ã‹ã‚‰idã‚’æ¨æ¸¬ã™ã‚‹
    if (rec.task) {
      const lc = rec.task.trim().toLowerCase();
      const t = tasksByLabel[lc];
      if (t && filterIds.includes(t.id)) {
        map[dayKey] = (map[dayKey] || 0) + Math.floor(sec / 60);
        continue;
      }
    }

    // ä¸Šã®ã©ã‚Œã«ã‚‚å½“ã¦ã¯ã¾ã‚‰ãªã„å ´åˆã¯é›†è¨ˆã—ãªã„
  }

  return map;
}

export default function CalendarPage() {
  const [year, setYear] = useState(() => new Date().getFullYear());
  const [month, setMonth] = useState(() => new Date().getMonth());
  const [dailyMinutes, setDailyMinutes] = useState({}); // { "YYYY-MM-DD": 25 }
  const [events, setEvents] = useState([]);
  const [birthday, setBirthday] = useState("");
  const [calendarTaskFilter, setCalendarTaskFilter] = useState(null);
  const [tasksDict, setTasksDict] = useState({ byId: {}, byLabel: {} });

  // â˜… A-6: å­ã©ã‚‚ä¸€è¦§ã¨é¸æŠä¸­ã®å­
  const [children, setChildren] = useState([]);
  const [selectedChildId, setSelectedChildId] = useState("all");

  // å±¥æ­´ã‚’stateã§æŒã¤ï¼ˆå­ã©ã‚‚ã‚’åˆ‡ã‚Šæ›¿ãˆãŸã¨ãã«å†é›†è¨ˆã™ã‚‹ãŸã‚ï¼‰
  const [history, setHistory] = useState([]);

  useEffect(() => {
    // ã‚¤ãƒ™ãƒ³ãƒˆ
    const evs = loadEvents();
    setEvents(evs);

    // ã‚«ãƒ¬ãƒ³ãƒ€ãƒ¼ã«åæ˜ ã™ã‚‹ã‚¿ã‚¹ã‚¯
    const filter = loadCalendarTaskFilter();
    setCalendarTaskFilter(filter);

    // ã‚¿ã‚¹ã‚¯è¾æ›¸
    const dict = loadTasksDict();
    setTasksDict(dict);

    // èª•ç”Ÿæ—¥
    setBirthday(loadBirthday());

    // å­ã©ã‚‚ä¸€è¦§ã¨ç¾åœ¨ã®å­
    try {
      const rawChildren = localStorage.getItem("pocopoco_children");
      if (rawChildren) {
        const arr = JSON.parse(rawChildren);
        if (Array.isArray(arr)) {
          setChildren(arr);
        }
      }
      const savedCurrentChild = localStorage.getItem("pocopoco_current_child_id");
      if (savedCurrentChild) {
        setSelectedChildId(savedCurrentChild);
      }
    } catch (e) {
      console.warn("calendar children load error", e);
    }

    // å±¥æ­´ã‚’èª­ã¿è¾¼ã‚“ã§ä¸€æ—¦ä¿å­˜
    try {
      const raw = localStorage.getItem("pocopoco_history");
      if (raw) {
        const arr = JSON.parse(raw);
        if (Array.isArray(arr)) {
          setHistory(arr);
          const minsMap = buildDailyMinutesFromHistory(
            arr,
            filter,
            dict.byId,
            dict.byLabel,
            savedCurrentChildOrAll()
          );
          setDailyMinutes(minsMap);
        }
      }
    } catch (e) {
      console.error("calendar load history error", e);
    }

    function savedCurrentChildOrAll() {
      const c = localStorage.getItem("pocopoco_current_child_id");
      return c ? c : "all";
    }
  }, []);

  // å­ã©ã‚‚ãƒ»ã‚¿ã‚¹ã‚¯ãƒ•ã‚£ãƒ«ã‚¿ãƒ»å±¥æ­´ã®ã©ã‚Œã‹ãŒå¤‰ã‚ã£ãŸã‚‰å†é›†è¨ˆ
  useEffect(() => {
    if (!Array.isArray(history)) return;
    const minsMap = buildDailyMinutesFromHistory(
      history,
      calendarTaskFilter,
      tasksDict.byId,
      tasksDict.byLabel,
      selectedChildId
    );
    setDailyMinutes(minsMap);
  }, [history, calendarTaskFilter, tasksDict, selectedChildId]);

  const todayKey = toDayKey(new Date());
  const cells = buildCalendarCells(year, month);
  const monthStr = `${year}-${String(month + 1).padStart(2, "0")}`;
  const eventsThisMonth = events.filter(
    (ev) => ev.date && ev.date.startsWith(monthStr)
  );

  function goPrevMonth() {
    const d = new Date(year, month, 1);
    d.setMonth(d.getMonth() - 1);
    setYear(d.getFullYear());
    setMonth(d.getMonth());
  }
  function goNextMonth() {
    const d = new Date(year, month, 1);
    d.setMonth(d.getMonth() + 1);
    setYear(d.getFullYear());
    setMonth(d.getMonth());
  }

  function getEventsForDay(dayKey) {
    return events.filter((ev) => ev.date === dayKey);
  }

  return (
    <main
      style={{
        padding: "24px 16px 80px",
        maxWidth: "480px",
        margin: "0 auto",
        fontFamily: "system-ui, sans-serif",
      }}
    >
      <header
        style={{
          display: "flex",
          alignItems: "center",
          justifyContent: "space-between",
          marginBottom: "12px",
        }}
      >
        <button onClick={goPrevMonth} style={navBtnStyle}>
          â†
        </button>
        <div style={{ textAlign: "center" }}>
          <div
            style={{ fontSize: "18px", fontWeight: "600", color: "#4a148c" }}
          >
            {year}å¹´ {month + 1}æœˆ
          </div>
          <div style={{ fontSize: "11px", color: "#777" }}>
            ã‚«ãƒ¬ãƒ³ãƒ€ãƒ¼ã«åæ˜ ã™ã‚‹ã‚¿ã‚¹ã‚¯ã ã‘åˆè¨ˆã—ã¾ã™
          </div>
        </div>
        <button onClick={goNextMonth} style={navBtnStyle}>
          â†’
        </button>
      </header>

      {/* å­ã©ã‚‚åˆ‡æ›¿ */}
      {children.length > 0 && (
        <div
          style={{
            marginBottom: "12px",
            display: "flex",
            gap: "6px",
            flexWrap: "wrap",
          }}
        >
          <button
            onClick={() => setSelectedChildId("all")}
